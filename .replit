run = "python manage.py runserver 0.0.0.0:3000"
modules = ["python-3.11"]

hidden = [".pythonlibs"]

[nix]
channel = "stable-25_05"
packages = ["c-ares", "cacert", "cargo", "fontconfig", "freetype", "gettext", "ghostscript", "glib", "glibcLocales", "grpc", "harfbuzz", "lcms2", "libffi", "libiconv", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "openssl", "pango", "pgadmin4", "pkg-config", "rustc", "tcl", "tk", "xcodebuild", "zlib", "fribidi", "libpng"]

[unitTest]
language = "python3"

[deployment]
run = ["sh", "-c", "python manage.py runserver 0.0.0.0:3000"]
deploymentTarget = "gce"

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 5000
externalPort = 80

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Django Server"

[[workflows.workflow]]
name = "Django Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python manage.py runserver 0.0.0.0:5000"
